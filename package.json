{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "TS template",
  "main": "build/app.js",
  "scripts": {
    "copy-misc": "cp -r ./src/misc ./build/",
    "build": "tsc && npm run copy-misc",
    "build:watch": "tsc-watch --onSuccess \"npm run copy-misc\"",
    "start": "node build/app.js",
    "start:watch": "nodemon",
    "lint": "tslint -c tslint.json -p tsconfig.json -t codeFrame '{src,test}/**/*.ts'",
    "test": "jest --env=node --colors --coverage test",
    "format": "prettier --write '**/*.ts'"
  },
  "keywords": [
    "template",
    "Typescript",
    "node",
    "ts",
    "sample"
  ],
  "author": "Kozlov Viktor",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "26.0.8",
    "@types/lodash": "4.14.158",
    "@types/node": "14.0.27",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "ts-jest": "26.1.4",
    "ts-node": "8.10.2",
    "tsc-watch": "4.2.9",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.9.7",
    "typescript-tslint-plugin": "0.5.5"
  },
  "dependencies": {
    "casual": "1.6.2",
    "jest": "26.2.2",
    "lodash": "4.17.19",
    "node-cache": "5.1.2",
    "source-map-support": "0.5.19"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config .prettierrc --write",
      "tslint -c tslint.json --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "post-checkout": "npm i",
      "post-merge": "npm i",
      "pre-commit": "lint-staged"
    }
  }
}
